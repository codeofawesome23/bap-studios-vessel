{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_right }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_left }}px;
    background-color: {{ block.settings.background_color }};}

  .ai-contact-form__container-{{ ai_gen_id }} {
    margin: 0 auto;
    {% if block.settings.width == 'custom' %}
      width: {{ block.settings.custom_width }}%;
    {% else %}
      width: 100%;
      max-width: 800px;
    {% endif %}
  }

  .ai-contact-form__wrapper-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
    width: 100%;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 24px 0;
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0 0 32px 0;
    font-size: {{ block.settings.text_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__row-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    width: 100%;
  }

  .ai-contact-form__row-{{ ai_gen_id }}--single {
    flex-direction: column;
  }

  .ai-contact-form__field-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size:14px;
    margin-bottom: 8px;
    font-weight: 500;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__select-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }} {
    padding: 16px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 14px;
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__select-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form__button-wrapper-{{ ai_gen_id }} {
    display: flex;
    {% if block.settings.button_width_desktop == 'fit' %}
      justify-content: flex-start;
    {% else %}
      justify-content: stretch;
    {% endif %}
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    {% if block.settings.button_width_desktop == 'fit' %}
      width: auto;padding: 16px 32px;
    {% else %}
      width: {{ block.settings.button_custom_width_desktop }}%;
      padding: 16px;
    {% endif %}
