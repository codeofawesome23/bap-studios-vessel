{% endstyle %}<div class="ai-contact-form-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-form__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-contact-form__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <div class="ai-contact-form__success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>
      {% endif %}

      {% if form.errors %}
        <div class="ai-contact-form__error-{{ ai_gen_id }}">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}

      <div class="ai-contact-form__wrapper-{{ ai_gen_id }}">
        <div class="ai-contact-form__row-{{ ai_gen_id }}">
          <div class="ai-contact-form__field-{{ ai_gen_id }}">
            {% if block.settings.show_labels %}
              <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-name-{{ ai_gen_id }}">
                Name {% if block.settings.name_required %}*{% endif %}
              </label>
            {% endif %}
            <input
              type="text"
              id="contact-name-{{ ai_gen_id }}"
              name="contact[name]"
              class="ai-contact-form__input-{{ ai_gen_id }}"
              value="{{ form.name }}"
              placeholder="{% unless block.settings.show_labels %}Name{% if block.settings.name_required %} *{% endif %}{% endunless %}"
              {% if block.settings.name_required %}required{% endif %}
            >
          </div>

          <div class="ai-contact-form__field-{{ ai_gen_id }}">
            {% if block.settings.show_labels %}
              <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-email-{{ ai_gen_id }}">
                Email *
              </label>
            {% endif %}
            <input
              type="email"
              id="contact-email-{{ ai_gen_id }}"
              name="contact[email]"
              class="ai-contact-form__input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{% unless block.settings.show_labels %}Email *{% endunless %}"
              autocomplete="email"required
            >
          </div>
        </div>

        {% if block.settings.show_phone %}
          <div class="ai-contact-form__row-{{ ai_gen_id }} ai-contact-form__row-{{ ai_gen_id }}--single">
            <div class="ai-contact-form__field-{{ ai_gen_id }}">
              {% if block.settings.show_labels %}
                <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-phone-{{ ai_gen_id }}">
                  Phone {% if block.settings.phone_required %}*{% endif %}
                </label>
              {% endif %}
              <input
                type="tel"
                id="contact-phone-{{ ai_gen_id }}"
                name="contact[phone]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                value="{{ form.phone }}"
                placeholder="{% unless block.settings.show_labels %}Phone{% if block.settings.phone_required %} *{% endif %}{% endunless %}"
                autocomplete="tel"
                {% if block.settings.phone_required %}required{% endif %}
              >
            </div>
          </div>
        {% endif %}

        {% if block.settings.show_subject %}
          <div class="ai-contact-form__row-{{ ai_gen_id }} ai-contact-form__row-{{ ai_gen_id }}--single">
            <div class="ai-contact-form__field-{{ ai_gen_id }}">
              {% if block.settings.show_labels %}
                <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-subject-{{ ai_gen_id }}">
                  Subject {% if block.settings.subject_required %}*{% endif %}
                </label>
              {% endif %}
              <input
                type="text"
                id="contact-subject-{{ ai_gen_id }}"
                name="contact[subject]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                value="{{ form.subject }}"
                placeholder="{% unless block.settings.show_labels %}Subject{% if block.settings.subject_required %} *{% endif %}{% endunless %}"
                {% if block.settings.subject_required %}required{% endif %}
              >
            </div>
          </div>
        {% endif %}

        <div class="ai-contact-form__row-{{ ai_gen_id }} ai-contact-form__row-{{ ai_gen_id }}--single">
          <div class="ai-contact-form__field-{{ ai_gen_id }}">
            {% if block.settings.show_labels %}
              <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-message-{{ ai_gen_id }}">
                Message *
              </label>
            {% endif %}
            <textarea
              id="contact-message-{{ ai_gen_id }}"
              name="contact[body]"
              class="ai-contact-form__textarea-{{ ai_gen_id }}"
              placeholder="{% unless block.settings.show_labels %}Message *{% endunless %}"
              required
            >{{ form.body }}</textarea>
          </div>
        </div>

        <div class="ai-contact-form__button-wrapper-{{ ai_gen_id }}">
          <button type="submit" class="ai-contact-form__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </button>
        </div>
      </div>
    {% endform %}
  </div>
</div>

